@model List<BoardModel>
@{

}
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-scriped table-bordered no-wrap">
                        <colgroup>
                            <col style="width:100px" />
                            <col style="width:auto" />
                            <col style="width:150px" />
                            <col style="width:120px" />
                        </colgroup>
                        <thread>
                            <tr>
                                <th>번호</th>
                                <th>제목</th>
                                <th>등록자</th>
                                <th>등록일</th>
                            </tr>
                        </thread>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Idx</td>
                                    <td>@item.Title</td>
                                    <td>@item.Reg_Username</td>
                                    <td>@item.Reg_Date.ToString("yyyy-MM-dd")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    @if (Model.Count() == 0)
                    {
                        <div class="alert alert-info">
                            데이터가 없습니다
                        </div>
                    }
                </div>
                <button type="button" class="btn btn-primary" style="float:right;" onclick="location.href = '/home/boardwrite';">글쓰기</button>
                @*<div class="text-right">
                        <a herf="/home/boardwrite" class="btn btn-sm btn-primary">글쓰기</a>
                </div>*@
            </div>
        </div>
    </div>
</div>
